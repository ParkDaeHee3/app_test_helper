                <ImageView
                    android:id="@+id/medicineImage3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="center"
                    style="@style/StandardButtonImage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/medicineText3"
                        style="@style/StandardButtonText"
                        android:text="감기약 B"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/medicineDescription3_1"
                        style="@style/StandardButtonText"
                        android:text="1. 감기약 테스트"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/medicineDescription3_2"
                        style="@style/StandardButtonText"
                        android:text="2. 감기약 테스트"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 네 번째 버튼 양식 -->
            <LinearLayout
                android:id="@+id/Hbutton4"
                style="@style/StandardButtonLayout"
                android:layout_width="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"> <!-- 버튼 사이 패딩 추가 -->

                <ImageView
                    android:id="@+id/medicineImage4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="center"
                    style="@style/StandardButtonImage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/medicineText4"
                        style="@style/StandardButtonText"
                        android:text="감기약 A"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/medicineDescription4_1"
                        style="@style/StandardButtonText"
                        android:text="1. 감기약 테스트"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/medicineDescription4_2"
                        style="@style/StandardButtonText"
                        android:text="2. 감기약 테스트"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 다섯 번째 버튼 양식 -->
            <LinearLayout
                android:id="@+id/Hbutton5"
                style="@style/StandardButtonLayout"
                android:layout_width="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"> <!-- 버튼 사이 패딩 추가 -->

                <ImageView
                    android:id="@+id/medicineImage5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="center"
                    style="@style/StandardButtonImage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/medicineText5"
                        style="@style/StandardButtonText"
                        android:text="감기약 A"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/medicineDescription5_1"
                        style="@style/StandardButtonText"
                        android:text="1. 감기약 테스트"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/medicineDescription5_2"
                        style="@style/StandardButtonText"
                        android:text="2. 감기약 테스트"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 두 번째 버튼 양식 -->
            <LinearLayout
                android:id="@+id/Hbutton6"
                style="@style/StandardButtonLayout"
                android:layout_width="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"> <!-- 버튼 사이 패딩 추가 -->

                <ImageView
                    android:id="@+id/medicineImage6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="center"
                    style="@style/StandardButtonImage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/medicineText6"
                        style="@style/StandardButtonText"
                        android:text="감기약 A"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/medicineDescription6_1"
                        style="@style/StandardButtonText"
                        android:text="1. 감기약 테스트"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/medicineDescription6_2"
                        style="@style/StandardButtonText"
                        android:text="2. 감기약 테스트"
