<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HeadacheFragment">

    <!-- 상단 텍스트뷰 및 구분선 -->
    <LinearLayout
        android:id="@+id/textView_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/subtitle_padding_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/content_page_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_page_subtitle_text_2"
            android:textSize="@dimen/subtitle_text_size"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/line_1"
            android:layout_width="@dimen/line_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/line_margin_top"
            app:srcCompat="@drawable/ic_line_1" />
    </LinearLayout>

    <!-- 스크롤 뷰 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_subtitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- 첫 번째 버튼 양식 -->
            <LinearLayout
                android:id="@+id/Hbutton1"
                style="@style/StandardButtonLayout"
                android:layout_width="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"> <!-- 버튼 사이 패딩 추가 -->

                <ImageView
                    android:id="@+id/medicineImage1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="center"
                    style="@style/StandardButtonImage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/medicineText1"
                        style="@style/StandardButtonText"
                        android:text="두통약"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/medicineDescription1_1"
                        style="@style/StandardButtonText"
                        android:text="1. 두통약 테스트"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/medicineDescription1_2"
                        style="@style/StandardButtonText"
                        android:text="2. 두통약 테스트"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 두 번째 버튼 양식 -->
            <LinearLayout
                android:id="@+id/Hbutton2"
                style="@style/StandardButtonLayout"
                android:layout_width="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"> <!-- 버튼 사이 패딩 추가 -->

                <ImageView
                    android:id="@+id/medicineImage2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="center"
                    style="@style/StandardButtonImage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/medicineText2"
                        style="@style/StandardButtonText"
                        android:text="감기약 A"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/medicineDescription2_1"
                        style="@style/StandardButtonText"
                        android:text="1. 감기약 테스트"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/medicineDescription2_2"
                        style="@style/StandardButtonText"
                        android:text="2. 감기약 테스트"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 세 번째 버튼 양식 -->
