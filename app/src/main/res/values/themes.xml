<resources>
    <!-- 기본 애플리케이션 테마 -->
    <style name="Theme.App_test_helper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 메인 브랜드 색상 -->
        <item name="colorPrimary">@color/main_theme_yellow</item> <!-- yellow4 -->
        <item name="colorPrimaryVariant">@color/main_title_yellow</item> <!-- yellow3 -->
        <item name="colorOnPrimary">@color/font_white</item> <!-- 기본 폰트 흰색 -->

        <!-- 서브 브랜드 색상 -->
        <item name="colorSecondary">@color/sub_title_blue</item> <!-- blue2 -->
        <item name="colorSecondaryVariant">@color/sub_side_blue</item> <!-- blue1 -->
        <item name="colorOnSecondary">@color/font_black</item> <!-- 기본 폰트 검정색 -->

        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- 여기에서 테마를 사용자 정의하세요 -->
    </style>

    <!-- 액션바 없는 테마 -->
    <style name="Theme.App_test_helper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar 오버레이 -->
    <style name="Theme.App_test_helper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- 팝업 오버레이 -->
    <style name="Theme.App_test_helper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
